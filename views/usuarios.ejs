<% layout('\\layout\\layout') -%>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Usuarios</li>
  </ol>
  <div class="container" style="margin-top: 30px">
    <h3>Agregar nuevo usuario</h3>
    <hr>
    <div id="app">
      <form action="/usuarios" method="post">
        <div class="form-group row">
          <label for="email" class="col-2 col-form-label">Email</label>
          <div class="col-4">
            <input id="email" type="email" name="email" class="form-control" v-model="email" value="">
          </div>
        </div>
        <div class="form-group row">
          <label for="identificacion" class="col-2 col-form-label">Identificación</label>
          <div class="col-4">
            <input id="identificacion" type="text" name="identificacion" class="form-control" v-model="identificacion" @input="buscarIdentificacion"
              value="">
          </div>
        </div>
        <div class="form-group row">
          <label for="nombre" class="col-2 col-form-label">Nombre</label>
          <div class="col-6">
            <input id="nombre" type="text" name="nombre" class="form-control" v-model="nombre">
          </div>
        </div>
        <button type="submit" class="btn btn-default">Guardar</button>
      </form>
      <hr>
      <h4>Lista de usuarios</h4>
      <div class="table-responsive">
        <table class="table table-sm table-hover">
          <thead>
            <tr>
              <th>Username</th>
              <th>Nombre</th>
              <th>Identificacion</th>
              <th>¿Confirmado?</th>
              <th>¿Activo?</th>
            </tr>
          </thead>
          <tbody>
            <% for (let u in usuarios) { %>
              <tr>
                <td>
                  <a href="/usuarios/<%= usuarios[u].user_id %>">
                    <%= usuarios[u].user_id %>
                  </a>
                </td>
                <td>
                  <%= usuarios[u].nombre %>
                </td>
                <td>
                  <%= usuarios[u].identificacion %>
                </td>
                <td>
                  <%= usuarios[u].cuenta_confirmada > 0 ? 'Sí' : 'No' %>
                </td>
                <td>
                  <%= usuarios[u].activo > 0 ? 'Sí' : 'No' %>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <script src="/js/usuarios.js"></script>
  </div>