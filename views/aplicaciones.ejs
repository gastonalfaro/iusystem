<% layout('\\layout\\layout') -%>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Aplicaciones</li>
  </ol>
  <div class="container" style="margin-top: 30px">
    <h3>Agregar nueva aplicación</h3>
    <hr>
    <form action="/aplicaciones" method="post">
      <div class="form-group row">
        <label for="nombre" class="col-2 col-form-label">Nombre de la aplicación</label>
        <div class="col-8">
          <input id="nombre" type="text" name="nombre" class="form-control" value="">
        </div>
      </div>
      <div class="form-group row">
        <label for="url" class="col-2 col-form-label">URL</label>
        <div class="col-8">
          <input id="url" type="text" name="url" class="form-control" value="">
        </div>
      </div>
      <button type="submit" class="btn btn-default">Guardar</button>
    </form>
    <hr>
    <h4>Lista de aplicaciones</h4>
    <div class="list-group">
      <% for (let a in apps) { %>
        <a class="list-group-item list-group-item-action flex-colum align-items-start" href="/aplicaciones/<%= apps[a].app_key %>">
          <!-- <p class="list-item"> -->
          <div class="d-flex w-100 justify-content-between">
            <h5>
              <%= apps[a].nombre %>
            </h5>
            <code><%= apps[a].app_key %></code>
          </div>

          <!-- </p> -->
          <!-- <p class="list-item"> -->
          <p class="mb-1 d-flex w-100">
            <!-- href="<%= apps[a].url %>" target="_blank" -->
            <%= apps[a].url %>
          </p>
          <!-- </p> -->
          <!-- <p class="list-item"> -->
          <!-- </p> -->
          <!-- <p class="list-item"> -->
          <!-- Secreto:
        <code class="mb-1 d-flex w-100" style="word-break: break-word;">
          <%= apps[a].secreto.trim() %>
        </code> -->
          <!-- </p> -->
        </a>
        <% } %>
    </div>
  </div>