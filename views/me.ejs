<% layout('/layout/layout') -%>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Configuración</li>
  </ol>
  <div class="container" style="margin-top: 30px">
    <form action="/" method="post">
      <div class="form-group">
        <label for="username">Nombre de usuario</label>
        <input id="username" type="text" name="username" class="pure-input-1" disabled value="{{session.user.username}}">
      </div>
      <a href="/cambiar-contrasena" class="pure-button pure-input-1">Cambiar contraseña</a>
      <label for="password">Email</label>
      <input id="email" type="email" name="email" class="pure-input-1" disabled value="{{session.user.email}}">
      <button type="submit" class="pure-button pure-button-primary pure-input-1">Guardar</button>
    </form>
  </div>